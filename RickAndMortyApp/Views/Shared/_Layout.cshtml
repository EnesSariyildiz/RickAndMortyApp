<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Konuşarak Öğren - RickAndMortyApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RickAndMortyApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class=" navbar navbar-expand-sm navbar-toggleable-sm navbar-light   box-shadow mb-3">
            <div class=" mt-5 container container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">RickAndMortyApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Episodes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Character" asp-action="Index">Characters</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Character" asp-action="FavoriteCharacters">Favorite Characters</a>
                        </li>
                        
                    </ul>
                    <form method="get" action="@Url.Action("Index", "Character")" class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="p">
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mainContainer">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class=" footer text-muted">
        <div class="container text-center">
            &copy; 2024 - RickAndMortyApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function search(event) {
            event.preventDefault(); // Varsayılan davranışı durdurma

            var searchInput = document.querySelector('.form-control').value.toLowerCase(); // Arama kutusundaki değeri alıyorum

            var elementsToFilter = document.querySelectorAll('.filterable-element'); // Filtrelenecek öğeler

            elementsToFilter.forEach(function (element) {
                var textContent = element.textContent.toLowerCase();
                if (textContent.includes(searchInput)) {
                    element.style.display = 'block'; // Eşleşen öğeler
                } else {
                    element.style.display = 'none'; // Eşleşmeyen öğeleri gizliyorum
                }
            });
        }

        // Submit
        document.querySelector('.form-control').addEventListener('input', search);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
