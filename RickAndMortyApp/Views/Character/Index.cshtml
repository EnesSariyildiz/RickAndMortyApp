@Model List<RickAndMortApp.Models.CharacterService>

    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h1 class="text mb-5">Rick and Morty Characters</h1>

    <div class="row">
        @foreach (var character in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card cardCss">

                    <div class="row g-0">
                        <div class="col-md-4 p-2">
                            <img src="@character.Image" alt="@character.Image" class="card-img" />

                            <a href="@Url.Action("FavoriteCharacters", "Character", new { id = character.Id })">
                                <button type="submit" class="btn btn-outline-danger btn-sm mt-3 mb-2">Add to Favorites</button>
                            </a>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <a href="@Url.Action("CharacterDetails", "Character", new { id = character.Id })">
                                    <h1 class="card-title h4 titleName" id="Name">@character.Name</h1>
                                </a>
                                <h6 class="prop">Status: @character.Status</h6>
                                <h6 class="prop">Gender: @character.Gender</h6>
                                <h6 class="prop">Species: @character.Species</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>